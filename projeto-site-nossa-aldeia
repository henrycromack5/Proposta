    <script>
        // Função para mostrar o Modal
        function showModal() {
            const modal = document.getElementById('cta-modal');
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            // Animação de entrada
            setTimeout(() => {
                modal.querySelector('div').classList.add('scale-100');
                modal.querySelector('div').classList.remove('scale-95');
            }, 10);
        }

        // Função para esconder o Modal
        function hideModal() {
            const modal = document.getElementById('cta-modal');
            // Animação de saída
            modal.querySelector('div').classList.remove('scale-100');
            modal.querySelector('div').classList.add('scale-95');
            setTimeout(() => {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
            }, 300);
        }

        // Lógica do Carrossel de Depoimentos
        let currentTestimonial = 0;
        const testimonials = document.querySelectorAll('.carousel-item');
        const dots = document.querySelectorAll('.dot');
        const totalTestimonials = testimonials.length;
        
        function showTestimonial(index) {
            testimonials.forEach(t => t.classList.remove('active'));
            dots.forEach(d => d.classList.remove('opacity-100'));
            dots.forEach(d => d.classList.add('opacity-50'));

            testimonials[index].classList.add('active');
            dots[index].classList.add('opacity-100');
            dots[index].classList.remove('opacity-50');
            currentTestimonial = index;
        }

        function nextTestimonial() {
            let nextIndex = (currentTestimonial + 1) % totalTestimonials;
            showTestimonial(nextIndex);
        }

        // Auto-Play do Carrossel a cada 5 segundos
        setInterval(nextTestimonial, 5000);
        
        // Inicializa o primeiro depoimento
        showTestimonial(0);


        // Observador de Interseção para Animações ao Descer a Página (Fade-in-up)
        document.addEventListener("DOMContentLoaded", function() {
            const elements = document.querySelectorAll('.fade-in-up');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const delay = parseInt(entry.target.getAttribute('data-delay') || 0);
                        setTimeout(() => {
                            entry.target.classList.add('is-visible');
                            observer.unobserve(entry.target); // Para que a animação ocorra apenas uma vez
                        }, delay);
                    }
                });
            }, {
                threshold: 0.1, // Começa a animar quando 10% do elemento está visível
            });

            elements.forEach(element => {
                observer.observe(element);
            });
        });

        // Comportamento da Sticky Navbar (aparece ao rolar)
        window.onscroll = function() { stickyNav() };

        function stickyNav() {
            const nav = document.getElementById("sticky-nav");
            // Certifique-se de que a hero-section existe antes de obter a altura
            const heroSection = document.querySelector('.hero-section');
            if (!heroSection) return;
            
            const heroHeight = heroSection.offsetHeight;
            
            if (window.scrollY > heroHeight * 0.5) { // Aparece depois de rolar metade do hero
                nav.classList.remove('-translate-y-full');
            } else {
                nav.classList.add('-translate-y-full');
            }
        }
    </script>
</body>
</html>
